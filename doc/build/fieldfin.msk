\Section{Creating Finite Fields}

\Declaration{GaloisField}

\beginexample
gap> F:= GF( 3^5 );
GF(3^5)
gap> G:= GaloisGroup ( F );
<group with 1 generators>
gap> BasisVectors( Basis( F ) );
[ Z(3)^0, Z(3^5), Z(3^5)^2, Z(3^5)^3, Z(3^5)^4 ]
\endexample

\Declaration{PrimitiveRoot}

\beginexample
gap> F:= GF( 3^5 );
GF(3^5)
gap> PrimitiveRoot( F );
Z(3^5)
\endexample


